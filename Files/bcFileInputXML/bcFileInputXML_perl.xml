<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE />
  </HEADER>

  <FAMILIES>
    <FAMILY>File/Input</FAMILY>
    <FAMILY>XML</FAMILY>
  </FAMILIES>
  
  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>
  
  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK" />
    <CONNECTOR CTYPE="COMPONENT_ERROR" />
    <CONNECTOR CTYPE="RUN_IF" />
  </CONNECTORS>
  
  <PARAMETERS>

    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="1"
      REPOSITORY_VALUE="XML"
    />

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="2"
    >
      <DEFAULT />
    </PARAMETER>
    
    <PARAMETER
      NAME="FILENAME"
      FIELD="FILE"
      NUM_ROW="3"
      REQUIRED="true"
      REPOSITORY_VALUE="FILE_PATH"
    >
      <DEFAULT>'__COMP_DEFAULT_FILE_DIR__/in.xml'</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="LOOP_QUERY"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="XPATH_QUERY"
    >
      <DEFAULT>'/bills/bill/line'</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="MAPPING"
      FIELD="TABLE"
      REQUIRED="true"
      NUM_ROW="5"
      NB_LINES="5"
      REPOSITORY_VALUE="XML_MAPPING"
    >
      <ITEMS BASED_ON_SCHEMA="true">
        <ITEM NAME="QUERY" REPOSITORY_ITEM="XML_QUERY" />
      </ITEMS>
    </PARAMETER>
    
    <PARAMETER
      NAME="LIMIT"
      FIELD="TEXT"
      NUM_ROW="6"
      REQUIRED="false"
      REPOSITORY_VALUE="LIMIT"
    >
      <DEFAULT></DEFAULT>
    </PARAMETER>

  </PARAMETERS>
  
  <ADVANCED_PARAMETERS>
    <PARAMETER
      NAME="ENCODING"
      FIELD="ENCODING_TYPE"
      NUM_ROW="10"
      REQUIRED="true"
    >
      <DEFAULT>'ISO-8859-15'</DEFAULT>
    </PARAMETER>
  </ADVANCED_PARAMETERS>

  <CODEGENERATION>
    <IMPORTS>
      <IMPORT NAME="XML-LibXML" MODULE="XML::LibXML" REQUIRED="true" />
    </IMPORTS>
  </CODEGENERATION>
  
  <RETURNS>
    <RETURN NAME="NB_LINE" TYPE="INTEGER" AVAILABILITY="AFTER" />
  </RETURNS>
</COMPONENT>