<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20070806A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Databases/DB_JDBC</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="1"
      REPOSITORY_VALUE="DATABASE:JDBC"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    />
    
    <PARAMETER
      NAME="USE_EXISTING_CONNECTION"
      FIELD="CHECK"
      NUM_ROW="10"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>    

    <PARAMETER
      NAME="CONNECTION"
      FIELD="COMPONENT_LIST"
      FILTER="tJDBCConnection"
      NUM_ROW="10"
      SHOW_IF="USE_EXISTING_CONNECTION == 'true'"
      DYNAMIC_SETTINGS="true"
    />
	
    <PARAMETER
      NAME="URL"
      FIELD="TEXT"
      NUM_ROW="20"
      REPOSITORY_VALUE="URL"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>"jdbc:"</DEFAULT>
    </PARAMETER>
	
    <PARAMETER
      NAME="DRIVER_JAR"
      FIELD="TABLE"
      NUM_ROW="30"
      NB_LINES="2" 
      REPOSITORY_VALUE="DRIVER_JAR"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      	<ITEMS> 
			<ITEM NAME="JAR_NAME" FIELD="MODULE_LIST"  /> 
		</ITEMS> 
    </PARAMETER>
	
    <PARAMETER
      NAME="DRIVER_CLASS"
      FIELD="TEXT"
      NUM_ROW="40"
      REPOSITORY_VALUE="DRIVER_CLASS"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
	
    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="50"
      REPOSITORY_VALUE="USERNAME"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="PASS"
      FIELD="TEXT"
      NUM_ROW="50"
      REPOSITORY_VALUE="PASSWORD"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      NUM_ROW="60"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
	<PARAMETER
      NAME="TABLE"
      FIELD="DBTABLE"
      NUM_ROW="70"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
 	<PARAMETER
      NAME="QUERYSTORE"
      FIELD="QUERYSTORE_TYPE"
      NUM_ROW="80"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

 	<PARAMETER
      NAME="GUESS_SCHEMA"
      FIELD="GUESS_SCHEMA"
      NUM_ROW="80"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
	
    <PARAMETER
      NAME="QUERY"
      FIELD="MEMO_SQL"
      NUM_ROW="90"
      REQUIRED="true"
    >
      <DEFAULT>"select id, name from employee"</DEFAULT>
    </PARAMETER>
		
   </PARAMETERS>

   <ADVANCED_PARAMETERS>
	<PARAMETER
      	NAME="ENCODING"
      	FIELD="ENCODING_TYPE"
      	NUM_ROW="10"
      	REQUIRED="true"
      	SHOW="false"
    >
      	<DEFAULT>"ISO-8859-15"</DEFAULT>
	</PARAMETER>
	
	<PARAMETER NAME="USE_CURSOR" FIELD="CHECK" NUM_ROW="20">
		<DEFAULT>false</DEFAULT>
	</PARAMETER>
	<PARAMETER NAME="CURSOR_SIZE" FIELD="TEXT" NUM_ROW="20"
			SHOW_IF="(USE_CURSOR == 'true')">
			<DEFAULT>1000</DEFAULT>
	</PARAMETER>

	
	
	<PARAMETER NAME="TRIM_ALL_COLUMN" FIELD="CHECK" NUM_ROW="30">
		<DEFAULT>false</DEFAULT>
	</PARAMETER>
	
	<PARAMETER NAME="TRIM_COLUMN" FIELD="TABLE" NUM_ROW="40"
		NB_LINES="5" SHOW_IF="TRIM_ALL_COLUMN == 'false'">
		<ITEMS BASED_ON_SCHEMA="true">
			<ITEM NAME="TRIM" FIELD="CHECK"></ITEM>
		</ITEMS>
	</PARAMETER>		
   </ADVANCED_PARAMETERS>

   <CODEGENERATION>
   </CODEGENERATION>

   <RETURNS>
      <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
      <RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="FLOW"/>
   </RETURNS>
</COMPONENT>