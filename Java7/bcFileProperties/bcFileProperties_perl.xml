<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>File/Management</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="10"
    >
      <TABLE READONLY="true">
      	<COLUMN NAME="abs_path"     TYPE="string" LENGTH="255" />
      	<COLUMN NAME="dirname"      TYPE="string" LENGTH="255" />
      	<COLUMN NAME="basename"     TYPE="string" LENGTH="255" />
        <COLUMN NAME="mode"         TYPE="int"    LENGTH="10" />
      	<COLUMN NAME="mode_string"  TYPE="string" LENGTH="10" />
       	<COLUMN NAME="uid"          TYPE="int"    LENGTH="10" />
      	<COLUMN NAME="gid"          TYPE="int"    LENGTH="10" />
      	<COLUMN NAME="size"         TYPE="int"    LENGTH="10" />
      	<COLUMN NAME="atime"        TYPE="int"    LENGTH="10" />
      	<COLUMN NAME="atime_string" TYPE="string" LENGTH="20" />
      	<COLUMN NAME="mtime"        TYPE="int"    LENGTH="10" />
      	<COLUMN NAME="mtime_string" TYPE="string" LENGTH="20" />
      	<COLUMN NAME="ctime"        TYPE="int"    LENGTH="10" />
      	<COLUMN NAME="ctime_string" TYPE="string" LENGTH="20" />
      </TABLE>
    </PARAMETER>

    <PARAMETER
      NAME="FILENAME"
      FIELD="FILE"
      NUM_ROW="20"
      REQUIRED="true"
    >
      <DEFAULT>$_globals{tFileList_1}{CURRENT_FILEPATH}</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FILL_MODE_STRING"
      FIELD="CHECK"
      NUM_ROW="30"
      REQUIRED="true"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

  </PARAMETERS>
  
  <CODEGENERATION>
    <IMPORTS>
       <IMPORT
         NAME="File-Stat-ModeString"
         MODULE="File::Stat::ModeString"
         REQUIRED="false"
       />
    </IMPORTS>
  </CODEGENERATION>
  
  <RETURNS/>
</COMPONENT>